<%# Including header partial %>
<%- include("partials/header"); -%>


<h1>Home</h1>
<%# "posts" are objects having both title and content. %>
<% posts.slice().reverse().forEach(function(posts){ %>
    <div class="box">
      <h2> <%= posts.postTitle %> </h2>
      <%# People can see 80 characters in home page %>
      <% var truncatedString = posts.postContent.substring(0,80); %>
      <p>
        <%= truncatedString + "..." %>
        <%# Read More can go to the Title url %>
        <%# ID of clicked post is a href taking you that url%>
        <a href="/posts/<%= posts._id %>">Read More</a>
      </p>
    </div>
<% }); %>

<%# Including footer partial %>
<%- include("partials/footer"); -%>
